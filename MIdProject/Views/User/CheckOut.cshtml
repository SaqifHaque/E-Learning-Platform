@model MIdProject.Models.ViewModels.Payment
@{
    ViewBag.Title = "CheckOut";
    if (Session["id"]==null || Session["type"].ToString() !="Student")
    {
        Response.Redirect("/Home/Index");
    }
}

<h2>CheckOut</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        Transaction Id(Bkash):
        <div class="col-md-10">
            @Html.EditorFor(model => model.Transaction, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Transaction, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Proceed" class="btn btn-default" />
        </div>
    </div>
}

